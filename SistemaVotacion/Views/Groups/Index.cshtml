@model IEnumerable<SistemaVotacion.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:#148f5e">GROUPS</h2>

<p>
    @Html.ActionLink("Create New", "Create",new { },new { @class="btn btn-success"})
</p>
<table class="table" style="background-color:#0094ff">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Number of members
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupMembers.Count)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GroupID }, new { @class="btn btn-warning"}) |
            @Html.ActionLink("Details", "Details", new { id=item.GroupID },new{@class="btn btn-info"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GroupID },new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
