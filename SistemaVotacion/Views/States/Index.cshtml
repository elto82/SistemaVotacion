@model IEnumerable<SistemaVotacion.Models.State>

@{
    ViewBag.Title = "Index";
}

<h2>STATES</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table-striped" style="color:#5c5ad0">
    <tr > 
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StateID },  new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Details", "Details", new { id=item.StateID }, new { @class ="btn btn-info" }) 
